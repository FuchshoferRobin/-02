<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="133dp"
        android:layout_height="50dp"
        android:text="Navigation"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <LinearLayout
        android:layout_width="334dp"
        android:layout_height="602dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <Button
            android:id="@+id/buttonDepartment"
            android:layout_width="305dp"
            android:layout_height="49dp"
            android:onClick="goToDepartmentActivity"
            android:text="Abteilung" />

        <Button
            android:id="@+id/buttonEmployee"
            android:layout_width="305dp"
            android:layout_height="49dp"
            android:onClick="gotToEmployeeActivity"
            android:text="Mitarbeiter" />

        <Button
            android:id="@+id/buttonCustomer"
            android:layout_width="305dp"
            android:layout_height="49dp"
            android:onClick="gotToCustomerActivity"
            android:text="Kunden" />

        <Button
            android:id="@+id/buttonOrder"
            android:layout_width="305dp"
            android:layout_height="49dp"
            android:onClick="gotToOrderActivity"
            android:text="Bestellungen" />

        <Button
            android:id="@+id/button"
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:text="Log"
            android:onClick="test"/>

        <EditText
            android:id="@+id/editTextId"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="ID" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <Button
            android:id="@+id/button3"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:text="HinzufÃ¼gen"
            android:onClick="add"/>

        <TextView
            android:id="@+id/textViewObject"
            android:layout_width="306dp"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="305dp"
            android:layout_height="match_parent"
            android:paddingBottom="50dp"
            android:scrollbars="vertical" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>